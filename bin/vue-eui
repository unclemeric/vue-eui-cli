#!/usr/bin/env node
const chalk = require('chalk')

require('commander')
  .version(require('../package').version)
  .usage('<command> [options]')
  .option('-auth', 'create auth template')
  .command('init [options] <app-name>', 'create a new project powered by vue-eui-cli')
  .on('--help', () => {
    console.log(' Examples:')
    // console.log('   $ vue-eui init [option] \t\t\t 在当前目录创建模板')
    console.log(chalk.gray('   $ vue-eui init my-project \t\t 创建一个普通模板'))
    console.log(chalk.gray('   $ vue-eui init -auth my-project \t 创建一个带权限模板'))
  })
  .parse(process.argv)
